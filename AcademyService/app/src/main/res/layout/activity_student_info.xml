<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/student_popup_frame"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/title"
        android:orientation="horizontal"
        android:background="@drawable/student_info_title"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <TextView
            android:id="@+id/studentName"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김진짜"/>
        <LinearLayout
            android:layout_marginEnd="30dp"
            android:gravity="right|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/locationButton"
                android:background="@drawable/location_button"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </Button>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/body"
        android:background="@drawable/student_info_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:gravity="left"
                android:text="연락처 : "
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/studentPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:gravity="left"
                android:text="01021215645"
                android:textColor="#000"
                android:textSize="15dp"
                android:linksClickable="true"
                android:autoLink="phone"/>

        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:gravity="left"
                android:text="부모님 이름 : "
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/parentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="김일이">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:gravity="left"
                android:text="부모님 연락처 : "
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/parentPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="01023231212">

            </TextView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>